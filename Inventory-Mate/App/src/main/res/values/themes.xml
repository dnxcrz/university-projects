<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Inventory_Mate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Orange</item>
        <!-- Primary brand color variant. -->
        <item name="colorPrimaryVariant">@color/Orange</item>
        <!-- Color to be used on top of the primary color (e.g., text color). -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Color to be used on top of the secondary color (e.g., text color). -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Bottom Navigation Style -->
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
    </style>

    <!-- Theme without action bar. -->
    <style name="Theme.Inventory_Mate.NoActionBar">
        <!-- Disables the action bar. -->
        <item name="windowActionBar">false</item>
        <!-- Disables the window title. -->
        <item name="windowNoTitle">false</item>
    </style>

    <!-- Dark action bar overlay theme. -->
    <style name="Theme.Inventory_Mate.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Light popup overlay theme. -->
    <style name="Theme.Inventory_Mate.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textColor">#ff5722</item>
    </style>
</resources>
